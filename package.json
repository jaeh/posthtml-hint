{
  "name": "posthtml-hint",
  "version": "1.0.0",
  "description": "HTML Hint for PostHTML",
  "engines": {
    "node": ">=8",
    "npm": ">=3"
  },
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "t",
    "start": "t -p",
    "format": "f -w -f js json",
    "format:check": "f -f js json"
  },
  "nyc": {
    "all": true,
    "require": "babel-register",
    "include": [
      "lib",
      "test"
    ],
    "extension": [
      ".js"
    ]
  },
  "standard": {
    "ignore": []
  },
  "dependencies": {
    "htmlhint": "0.14.1",
    "log-symbols": "4.0.0",
    "posthtml-render": "1.2.2",
    "text-table": "0.2.0"
  },
  "devDependencies": {
    "@magic/format": "0.0.11",
    "@magic/test": "0.1.52",
    "posthtml": "0.13.1"
  },
  "keywords": [
    "HTML",
    "HTMLHINT",
    "PostHTML",
    "PostHTML Hint"
  ],
  "author": {
    "name": "Michael Ciniawky",
    "email": "michael.ciniawsky@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/posthtml/posthtml-hint"
  },
  "bugs": {
    "url": "https://github.com/posthtml/posthtml-hint/issues"
  },
  "homepage": "https://github.com/posthtml/posthtml-hint#readme",
  "license": "MIT"
}
